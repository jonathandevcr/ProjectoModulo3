pipeline {
    agent any
    stages {
        stage('Newman Tests') {
            steps {
                sh '''
                cd api/newman
                newman run examen.postman_collection.json -e heroku.postman_environment.json
                '''
            }
        }

        stage('Jmeter Tests') {
            steps {
                sh '''
                cd load
                export PATH=/home/pjcalvov/jmeter/apache-jmeter-5.3/bin:$PATH
                jmeter -n -t proyecto_modulo3_testplan.jmx
                '''
            }
        }
    }

}