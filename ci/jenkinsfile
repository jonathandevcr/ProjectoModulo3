pipeline {
    agent any
    stages {
        stage('Newman Tests') {
            steps {
                sh '''
                cd api/newman
                newman run examen.postman_collection.json -e heroku.postman_environment.json
                
                cd ../
                cd ../
                '''
            }
        }
        stage('Jmeter Tests') {
            steps {
                sh '''
                cd ProjectoModulo3-main/load/jmeter
                jmeter -n -t proyecto_modulo3_testplan.jmx
                '''
            }
        }
    }

}